

<h1>アニメ投稿</h1>

<%= form_with model: @anime, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "アニメのタイトル" %><br />
    <%= f.text_field :title, %>
  </div>

  <div class="field">
    <%= f.label :description, "アニメの説明" %><br />
    <%= f.text_area :description, class: :form__text, %>
  </div>

  <div class="field">
    <%= f.label :year , "年代" %><br />
    <%= f.text_area :year , class: :form__text, %>
  </div>

  <div class="field">
    <%= f.label :image_url, "アニメ画像" %><br />
    <%= f.text_field :image_url,  %>
  </div>

  <div class="field">
    <%= f.label :quote, "画像の引用元" %><br />
    <%= f.text_field :quote, %>
  </div>

  <div class="field">
    <%= f.label :production, "制作会社" %><br />
    <%= f.text_area :production, class: :form__text, id:"prototype_catch_copy" %>
  </div>

  <div class="field">
    <%= f.label :directed_by, "アニメ監督" %><br />
    <%= f.text_area :directed_by, class: :form__text, id:"prototype_concept" %>
  </div>

  <div class="field">
    <%= f.label :genre_id, "ジャンル" %><br />
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"genre-select"})  %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>